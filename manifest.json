{
  "manifest_version": 2,

  "name": "HiVi",
  "description": "Web Browser History Visualizer",
  "version": "0.2",

  "browser_action": {
    "default_icon": "img/icon.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "history",
    "bookmarks",
    "tabs",
    "storage",
    "identity",
    "https://*.getpocket.com/*"
  ]
}